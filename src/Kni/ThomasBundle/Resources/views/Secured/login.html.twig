{% extends "KniThomasBundle::layout.html.twig" %}

{% block slider %}
    <ul id="slider">
        <li><img src="{{ asset('bundles/kni/images/slider/1.jpg') }}" alt="Slide 1" /></li>
        <li><img src="{{ asset('bundles/kni/images/slider/2.jpg') }}" alt="Slide 2" /></li>
    </ul>
{% endblock %}

{% block navigationBar '' %}

{% block content %}
    <div id="login" class="block">
        <h1>Zaloguj się</h1>
        {% if error %}
            <div class="error">{{ error.message }}</div>
        {% endif %}
        <form name="login" action="{{ path("login_check") }}" method="post" class="login">
            <ul>
                 <li>
                     <label for="username">Login</label>
                     <input type="text" id="username" name="_username" value="{{ last_username }}" />
                 </li>
                 <li>
                     <label for="password">Hasło</label>
                     <input type="password" id="password" name="_password" />
                 </li>
                 <li>
                     <label>&nbsp;</label>
                     <input type="submit" class="submit" onClick="{{ path('page') }}"  value="Zaloguj">
                 </li>
                 <div class="clear"></div>
            </ul>
        </form>
        
    </div>
               
{% endblock %}