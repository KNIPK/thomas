{% extends "KniThomasBundle::layout.html.twig" %}

{% block content %}
<div class="block">

    <h1>Edycja danych</h1>
    {{info}}
    <form action="{{path('user_name_update')}}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
    
    <form action="{{path('user_pass_update')}}" method="post" {{ form_enctype(pass_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(pass_form) }}
        <p>
            <button type="submit">Zmień hasło</button>
        </p>
    </form>

    <div class="clear"></div>
</div>
{% endblock %}