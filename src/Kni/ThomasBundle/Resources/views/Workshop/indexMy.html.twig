{% extends "KniThomasBundle::layout.html.twig" %}

{% block content %}
<div class="block">
    <h1>Twoje warsztaty</h1>

    <table class="records_list">
        <thead>
            <tr>

                <th>Name</th>
                <th>Początek</th>
                <th>Koniec</th>
                <th>Opis</th>
                <th>Prowadź</th>


            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('profile_workshop_show', { 'id': entity.id }) }}">{{ entity.name }} </a></td>
                    <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if entity.endDate %}{{ entity.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{{ entity.description }}</td>
                    <td><a href="{{ path('meeting_index', { 'workshopId': entity.id }) }}"><button type="submit">Rozpocznij warsztat</button></a></td>
                </tr>
        {% else %}
                <tr>
                    <td colspan="4">
                        Brak warsztatów
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('profile_workshop_new') }}">
                    Utwórz nowe warsztaty
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
