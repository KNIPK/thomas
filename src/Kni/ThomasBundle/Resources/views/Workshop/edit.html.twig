{% extends "KniThomasBundle::layout.html.twig" %}

{% block content -%}
<div class="block">
    <h1>Warsztaty - {{ entity.name }}</h1>
    
    {% include 'KniThomasBundle:Workshop:editMenu.html.twig' with {'active': 'edit'} %}

    <form action="{{ path('profile_workshop_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Zapisz zmiany</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('profile_my_workshop_index') }}">
                Wróć do listy warsztatów
            </a>
        </li>
