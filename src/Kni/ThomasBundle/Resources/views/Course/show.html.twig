{% extends "KniThomasBundle::layout.html.twig" %}

{% block content -%}
    <div class="block">
        <h1>Course</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                    <th>Nazwa</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Data rozpoczęcia</th>
                    <td>{{ entity.startDate|date('Y-m-d H:i') }}</td>
                </tr>
                <tr>
                    <th>Data zakończenia</th>
                    <td>{{ entity.endDate|date('Y-m-d H:i') }}</td>
                </tr>
                <tr>
                    <th>Opis</th>
                    <td>{{ entity.description }}</td>
                </tr>
            </tbody>
        </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path('profile_course') }}">
                    Wróć do listy
                </a>
            </li>
            <li>
                <a href="{{ path('profile_course_edit', { 'id': entity.id }) }}">
                    Edytuj
                </a>
            </li>
            <li>
                <form action="{{ path('profile_course_delete', { 'id': entity.id }) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE" />
                    {{ form_widget(delete_form) }}
                    <button type="submit">Usuń</button>
                </form>
            </li>
        </ul>
    </div>  
{% endblock %}
