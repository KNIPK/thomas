{% extends "KniThomasBundle::layout.html.twig" %}

{% block slider %}
    <ul id="slider">
        <li><img src="{{ asset('bundles/kni/images/slider/1.jpg') }}" alt="Slide 1" /></li>
        <li><img src="{{ asset('bundles/kni/images/slider/2.jpg') }}" alt="Slide 2" /></li>
    </ul>
{% endblock %}

{% block content %}
         <div class="page">
                    <div id="login">
                        <section class="loginform cf">
                            <form name="login" action="{{ path("login_check") }}" method="post" id="login">
                               <center>
                                   <ul>
					<li>
                                            <label for="username">Username</label>
                                              <input type="text" id="username" name="_username" value="{{ last_username }}" />
                                        </li>
				         <li>
                                                <label for="password">Password</label>
                                                <input type="password" id="password" name="_password" />
                                          </li>
                                          </center>
                                    <center>
                                        <li>
                                            <input type="submit" onClick="{{ path('page') }}"  value="Sign in">
                                        </li>
                                   </center>
                            </form>
                           </section>
                      </div>
               {% if error %}
                    <div class="error">{{ error.message }}</div>
                {% endif %}
    </div>
{% endblock %}