{% extends "KniThomasBundle::layout.html.twig" %}

{% block content -%}
    <div class="block">
        
        <h1>Utwórz warsztaty - krok 2</h1>
        
        {% if isEditWorkshop %}
            {% include 'KniThomasBundle:Workshop:editMenu.html.twig' with {'active': 'files', 'workshopId': workshopId} %}
        {% else %}
            <ul class="steps">
                <li class="active">Podstawowe informacje</li>
                <li class="active last">Dodawanie zasobów</li>
                <li>Etapy</li>
                <li>Zaproszenia</li>
                <li>Podsumowanie</li>
            </ul>
        {% endif %}

        <table class="records_list">
            <thead>
                <tr>
                    <th>Nazwa zasobu</th>
                    <th>Akcja</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.name }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('profile_files_delete', { 'id': entity.id, 'workshopId': workshopId }) }}">usuń</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">
                        Brak zasobów
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <ul>
            <li>
                <a href="{{ path('profile_files_new', { 'workshopId': workshopId }) }}">
                    Dodaj zasób
                </a>
            </li>
        </ul>
        {% if isEditWorkshop==false %}
            <p class="center">
                <a class="button" href="{{ path('profile_steps', { 'workshopId': workshopId }) }}">
                    Dalej
                </a>
            </p>
        {% endif %}
    </div>
{% endblock %}
